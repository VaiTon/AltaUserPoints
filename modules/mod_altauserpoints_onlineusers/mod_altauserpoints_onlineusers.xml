<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>AltaUserPoints - Online Users</name>
	<author>Bernard Gilly - Adrien Roussel</author>
	<creationDate>2016 november 30</creationDate>
	<copyright>Copyright (C) 2015-2016. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>www.alphaplug.com</authorEmail>
	<authorUrl>https://www.nordmograph.com/extensions</authorUrl>
	<version>1.0.0</version>
	<description>Online users with total points.</description>
	<languages>
		<language tag="en-GB">en-GB.mod_altauserpoints_onlineusers.ini</language>
		<language tag="fr-FR">fr-FR.mod_altauserpoints_onlineusers.ini</language>
		<language tag="fi-FI">fi-FI.mod_altauserpoints_onlineusers.ini</language>
		<language tag="es-ES">es-ES.mod_altauserpoints_onlineusers.ini</language>
	</languages>
	<files>
		<filename module="mod_altauserpoints_onlineusers">mod_altauserpoints_onlineusers.php</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
	</files>
	<config>
	 <fields name="params">
	  <fieldset name="basic">
		<field name="moduleclass_sfx" type="text" default="" label="MODAUP_CLASSSUFFIX" description="MODAUP_CLASSSUFFIXDESC" />
		<field name="count" type="text" default="5" label="MODAUP_COUNT" description="MODAUP_COUNTDESC" />
		<field name="usrname" type="radio" class="radio btn-group" default="name" label="MODAUP_USRNAME" description="MODAUP_USRNAMEDESC">
			<option value="name">MODAUP_NAME</option>
			<option value="username">MODAUP_USERNAME</option>
		</field>
		<field name="showavatar" type="radio" class="radio btn-group" default="0" label="MODAUP_SHOW_AVATAR" description="MODAUP_SHOW_AVATAR">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="showself" type="radio" class="radio btn-group" default="0" label="MODAUP_SHOW_SELF" description="MODAUP_SHOW_SELF">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		</fieldset>
   </fields>	
	</config>
</extension>