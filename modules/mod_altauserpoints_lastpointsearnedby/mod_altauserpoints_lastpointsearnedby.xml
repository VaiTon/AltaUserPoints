	<creationDate>2016 february 13</creationDate>
	<copyright>Copyright (C) 2015-2016. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>www.alphaplug.com</authorEmail>
	<authorUrl>https://www.nordmograph.com/extensions</authorUrl>
	<version>1.0.0</version>
	<description>Last points earned by...</description>
	<languages>
		<language tag="en-GB">en-GB.mod_altauserpoints_lastpointsearnedby.ini</language>
		<language tag="fr-FR">fr-FR.mod_altauserpoints_lastpointsearnedby.ini</language>
		<language tag="es-ES">es-ES.mod_altauserpoints_lastpointsearnedby.ini</language>
	</languages>
	<files>
		<filename module="mod_altauserpoints_lastpointsearnedby">mod_altauserpoints_lastpointsearnedby.php</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
	</files>
	<config>
	 <fields name="params">
	  <fieldset name="basic">	  
		<field name="moduleclass_sfx" type="text" default="" label="MODAUP_LP_CLASSSUFFIX" description="MODAUP_LP_CLASSSUFFIXDESC" />
		<field name="count" type="text" default="5" label="MODAUP_LP_COUNT" description="MODAUP_LP_COUNTDESC" />
		<field name="showdate" type="radio" class="radio btn-group" default="1" label="MODAUP_LP_SHOWDATE" description="MODAUP_LP_SHOWDATE">
			<option value="0">JNO</option> 
			<option value="1">JYES</option> 
		</field>
		<field name="showavatar" type="radio" class="radio btn-group" default="0" label="MODAUP_LP_SHOW_AVATAR" description="MODAUP_LP_SHOW_AVATAR">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="usrname" type="radio" class="radio btn-group" default="name" label="MODAUP_LP_USRNAME" description="MODAUP_LP_USRNAMEDESC">
			<option value="name">MODAUP_LP_NAME</option>
			<option value="username">MODAUP_LP_USERNAME</option>
		</field>  
		</fieldset>
   </fields>	
	</config>
</extension>